  <script>
    // Verifica se o administrador está logado
    fetch('/verificar_sessao_usuario')
      .then(res => res.json())
      .then(data => {
        if (!data.logado) {
          alert('Você precisa estar logado como usuário!');
          window.location.href = '../login/login.html';
        } else {
          document.getElementById('nome_Usuario').textContent = `Bem-vindo(a),  ${data.nome}`;
        }
      });
